<div id="message">
  {{ message }}
</div>
<div id="info">
  <table>
    <tr>
      <th>Kubernetes Dashboard URL:</th>
      <td><a href="{{ Kubernetes_Dashboard_URL }}" target="_blank">{{ Kubernetes_Dashboard_URL }}</a></td>
    </tr>
    <tr>
      <th>Kubernetes Token:</th>
      <td>{{ Kubernetes_Token }}</td>
      <td><button onclick="copyKubernetesToken()">Copy</button></td>
    </tr>
    <tr>
      <th>namespace:</th>
      <td>{{ namespace }}</td>
    </tr>
    <tr>
      <th>pod:</th>
      <td>{{ pod }}</td>
    </tr>
    <tr>
      <th>node:</th>
      <td>{{ node }}</td>
    </tr>
  </table>
</div>
<div id="footer">
  {{ container }}
</div>
<script>
function copyKubernetesToken() {
  const tokenField = document.querySelector('#info table tr:nth-child(2) td:nth-child(2)');
  const tokenValue = tokenField.textContent;

  navigator.clipboard.writeText(tokenValue)
    .then(() => {
      console.log('Kubernetes token copied to clipboard');
      alert('Kubernetes token copied to clipboard');
    })
    .catch(err => {
      console.error('Failed to copy Kubernetes token:', err);
      alert('Failed to copy Kubernetes token.');
    });
}
</script>