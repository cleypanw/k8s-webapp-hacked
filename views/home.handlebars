<div id="message">
  {{ message }}
</div>
<div id="info">
  <table>
    <tr>
      <th>Kubernetes Dashboard URL:</th>
      <td><a href="{{ Kubernetes_Dashboard_URL }}" target="_blank">{{ Kubernetes_Dashboard_URL }}</a></td>
    </tr>
    <tr>
      <th>Kubernetes Token:</th>
      <td id="tokenField">{{ Kubernetes_Token }}</td>
    </tr>
    <tr>
      <th></th>
      <td><button onclick="copyKubernetesToken()">Copy</button></td>
    </tr>
    <tr>
    <tr>
      <th>namespace:</th>
      <td>{{ namespace }}</td>
    </tr>
    <tr>
      <th>pod:</th>
      <td>{{ pod }}</td>
    </tr>
    <tr>
      <th>node:</th>
      <td>{{ node }}</td>
    </tr>
  </table>
</div>
<div id="footer">
  {{ container }}
</div>
<script>
function copyKubernetesToken() {
  const tokenField = document.getElementById('tokenField');
  const range = document.createRange();
  range.selectNodeContents(tokenField);
  window.getSelection().removeAllRanges();
  window.getSelection().addRange(range);
  document.execCommand('copy');
  window.getSelection().removeAllRanges();
}
</script>